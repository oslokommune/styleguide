{% set componentHasAttrs = component.attrs is defined and component.attrs is not empty %}
{% set componentModifiers = component.modifiers.split(' ') | default([]) %}
{% set componentClasses = ['osg-button']|merge(componentModifiers) %}

<button
  class="{{ componentClasses|join(' ') }}"
  {% if componentHasAttrs %}
    {% for attr in component.attrs %}
      {{ attr.key }}="{{ attr.val }}"
    {% endfor %}
  {% endif %}
>
  {% block content %}
    Button text
  {% endblock %}
</button>
