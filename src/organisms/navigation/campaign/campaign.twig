<a href="{{ campaign.link.url }}" class="osg-campaign" title="{{ campaign.link.text }}">
  <div class="osg-campaign__image">
    {% include 'atoms/decorators/figure/figure.twig' %}
  </div>
  <div class="osg-campaign__text">
    <h3 class="osg-u-heading-5 osg-campaign__heading">
      {{ campaign.heading }}
    </h3>
    <p class="osg-u-text-6 osg-campaign__ingress">
      {{ campaign.ingress }}
    </p>
  </div>
</a>
